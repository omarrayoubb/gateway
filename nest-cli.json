{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
    "assets": [
      "**/*.proto"
    ],
    "watchAssets": true
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "accounts": {
      "type": "application",
      "root": "apps/accounts",
      "entryFile": "main",
      "sourceRoot": "apps/accounts/src",
      "compilerOptions": {
        "tsConfigPath": "apps/accounts/tsconfig.app.json",
        "assets": [
          "**/*.proto"
        ],
        "watchAssets": true
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
        "assets": [
          "**/*.proto"
        ],
        "watchAssets": true
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "crm": {
      "type": "application",
      "root": "apps/crm",
      "entryFile": "main",
      "sourceRoot": "apps/crm/src",
      "compilerOptions": {
        "tsConfigPath": "apps/crm/tsconfig.app.json"
      },
      "assets": [
        "**/*.proto"
      ],
      "watchAssets": true
    },
    "desk": {
      "type": "application",
      "root": "apps/desk",
      "entryFile": "main",
      "sourceRoot": "apps/desk/src",
      "compilerOptions": {
        "tsConfigPath": "apps/desk/tsconfig.app.json"
      }
    },
    "supplychain": {
      "type": "application",
      "root": "apps/supplychain",
      "entryFile": "main",
      "sourceRoot": "apps/supplychain/src",
      "compilerOptions": {
        "tsConfigPath": "apps/supplychain/tsconfig.app.json",
        "assets": [
          "**/*.proto"
        ],
        "watchAssets": true
      }
    },
    "finance": {
      "type": "application",
      "root": "apps/finance",
      "entryFile": "main",
      "sourceRoot": "apps/finance/src",
      "compilerOptions": {
        "tsConfigPath": "apps/finance/tsconfig.app.json",
        "assets": [
          "**/*.proto"
        ],
        "watchAssets": true
      }
    },
    "people": {
      "type": "application",
      "root": "apps/people",
      "entryFile": "main",
      "sourceRoot": "apps/people/src",
      "compilerOptions": {
        "tsConfigPath": "apps/people/tsconfig.app.json",
        "assets": [
          "**/*.proto"
        ],
        "watchAssets": true
      }
    }
  }
}